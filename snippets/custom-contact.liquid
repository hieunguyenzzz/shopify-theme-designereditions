
<div id="contactFormWrapper">
  {% form 'contact' %}

    {% if form.posted_successfully? %}
      <div class="successForm feedback">
        <p>{{ 'contact.form.post_success' | t }}</p>
      </div>
    {% endif %}

    {% if form.errors %}
      <div class="errorForm feedback">
        <p>{{ 'general.forms.post_error' | t }}</p>
      </div>
    {% endif %}

  {% if type.settings.cf_show_first_name %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormFirstName" name="contact[FirstName]" placeholder="{{ 'contact.form.firstname' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_last_name %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormLastName" name="contact[LastName]" placeholder="{{ 'contact.form.lastname' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_subject %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormSubject" name="contact[Subject]" placeholder="{{ 'contact.form.subject' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_company_name %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormCompanyName" name="contact[CompanyName]" placeholder="{{ 'contact.form.companyname' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_address %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormAddress" name="contact[address]" placeholder="{{ 'contact.form.address' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_website_url %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormWebsiteURL" name="contact[WebsiteUrl]" placeholder="{{ 'contact.form.websiteurl' | t }}" />
      </p>
    </div>
  {% endif %}
  <div class="desktop-12 tablet-6 mobile-3">
    <p>
      <input type="email" id="contactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" />
    </p>
  </div>
  {% if type.settings.cf_show_phone %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <input type="text" id="contactFormTelephone" name="contact[phone]" placeholder="{{ 'contact.form.phone' | t }}" />
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_custom_field_one %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        {% if type.settings.cf_custom_field_one_type == 'input' %}
            <input type="text" id="contactFormCustomFieldOne" name="contact[CustomFieldOne]" placeholder="{{ type.settings.cf_custom_field_one }}" />
        {% else %}
          <textarea rows="15" cols="90" id="contactFormCustomFieldOne" name="contact[CustomFieldOne]" placeholder="{{ type.settings.cf_custom_field_one }}"></textarea>
        {% endif %}
      </p>
    </div>
  {% endif %}
  {% if type.settings.cf_show_custom_field_two %}
    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        {% if type.settings.cf_custom_field_two_type == 'input' %}
            <input type="text" id="contactFormCustomFieldTwo" name="contact[CustomFieldTwo]" placeholder="{{ type.settings.cf_custom_field_two }}" />
        {% else %}
          <textarea rows="15" cols="90" id="contactFormCustomFieldTwo" name="contact[CustomFieldTwo]" placeholder="{{ type.settings.cf_custom_field_two }}"></textarea>
        {% endif %}
      </p>
    </div>
  {% endif %}

    <div class="desktop-12 tablet-6 mobile-3">
      <p>
        <textarea rows="15" cols="90" id="contactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}"></textarea>
      </p>
      <p>
        <input type="submit" id="contactFormSubmit" class="secondary button" value="{{ 'contact.form.send' | t }}" />
      </p>
    </div>
  {% endform %}
</div>

<div class="clear"></div>

<li>
    <a href="{{ routes.cart_url }}" {% if settings.ajax_cart_method == 'drawer' %} class="site-header__cart-toggle !tw-flex tw-items-center js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false" {% endif %}>
        <span class="cart-words"></span>
        <svg class="tw-text-lg" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
        <span class="CartCount tw-badge tw-badge-sm empty:tw-hidden">{%- if cart.item_count > 0  -%}
            {{ cart.item_count }}
        {% endif %}</span>
        &nbsp;<span class="CartCost tw-hidden">{{ cart.total_price | money }}</span>
    </a>
</li>

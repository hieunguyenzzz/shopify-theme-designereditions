{% for link in linklists[section.settings.main_nav1].links %}
    {% assign linkProps = nil %}
    {% if link.url contains 'http://' or link.url contains 'https://' %}
        {% assign linkProps = 'target="_blank"' %}
    {% endif %}
    {% render 'navigation', link: link ,linkProps:linkProps %}
{% endfor %}



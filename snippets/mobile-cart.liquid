<!-- Shown on Mobile Only -->

<ul class="tw-list-none tw-flex tw-items-center">
  <li>
    <a href="{{ routes.cart_url }}" class="site-header__cart-toggle js-drawer-open-right tw-relative tw-flex tw-items-center" aria-controls="CartDrawer" aria-expanded="false">
      <span class="cart-words">{{ "cart.general.title" | t }}</span>
      <svg class="tw-text-lg" fill="none" height="1em" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewbox="0 0 24 24" width="1em" xmlns="http://www.w3.org/2000/svg">
        <circle cx="9" cy="21" r="1"></circle>
        <circle cx="20" cy="21" r="1"></circle>
        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
      </svg>
      <span class="CartCount tw-absolute tw-top-0 tw-leading-loose tw-right-0 tw-badge tw-badge-xs tw-h-[1.2em] tw-transform tw-translate-x-1/2 tw--translate-y-1/3 empty:tw-hidden">
        {%- if cart.item_count > 0 -%}
          {{ cart.item_count }}
        {%- endif -%}
      </span>
    </a>
  </li>
</ul>

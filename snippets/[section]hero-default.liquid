<div style=" background: {{ section.settings.color }}; " class="homepage-image-row-{{ section.id }}" data-section-id="{{ section.id }}" data-aos="{{ settings.scroll_animation }}">
    <article class="tw-flex-col tw-flex lg:tw-flex-row lg:tw-items-center " id="image-rows">
        <div class="lg:tw-w-[40%] lg:tw-px-8 lg:tw-max-w-[calc(640px-10%)] lg:tw-ml-auto tw-pt-11 lg:tw-py-8">
            <div class="flex tw-text-center lg:tw-text-left lg:tw-items-start tw-flex-col tw-items-center tw-max-w-xl tw-mx-auto" data-aos="{{ settings.scroll_animation }}" data-aos-delay="300" data-aos-duration="1000">
                {% if section.settings.title != blank %}
                    <h3 class="tw-text-3xl md:tw-text-5xl tw-font-bold tw-leading-tight">
                        {{ section.settings.title | escape }}
                    </h3>
                {% endif %}
                {% if section.settings.text != blank %}
                    <div class="rte">
                        {{ section.settings.text }}
                    </div>
                {% endif %}
                {% if section.settings.button != blank and section.settings.link != blank %}
                    <div>
                        <div class="cta">
                            <a href="{{ section.settings.link }}">
                                {{ section.settings.button | escape }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="lg:tw-w-[60%]">
            {% if section.settings.image != blank %}
                {% render 'basic-responsive-image', type: section.settings.image, data_widths: '[180, 360, 540, 720, 900]' %}
                <noscript>
                    <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt }}">
                </noscript>
            {% else %}
                <div class="onboard">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
            {% endif %}
        </div>
    </article>
</div>
